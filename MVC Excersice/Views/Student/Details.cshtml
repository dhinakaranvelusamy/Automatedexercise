﻿@model DataAccessLayer.StudentDetails

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div>
    <h4>Student Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Roll Number</dt>
        <dd class="col-sm-10">@Model.RollNumber</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.age</dd>

        <dt class="col-sm-2">Mobile Number</dt>
        <dd class="col-sm-10">@Model.MobileNumber</dd>
    </dl>
</div>

<div>
    <!-- Edit button -->
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary">Edit</a> |
    <!-- Back to list -->
    <a asp-action="Student" class="btn btn-secondary">Back to List</a>
</div>
