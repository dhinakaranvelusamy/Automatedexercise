@model IEnumerable<DataAccessLayer.StudentDetails>

<h1>Student List</h1>

<a class="btn btn-primary mb-2" asp-action="Add">Add New Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Roll No</th>
            <th>Name</th>
            <th>Age</th>
            <th>Mobile No</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.RollNumber</td>
                <td>@student.Name</td>
                <td>@student.age</td>
                <td>@student.MobileNumber</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@student.RollNumber">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.RollNumber">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.RollNumber">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
