@model DataAccessLayer.StudentDetails

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Roll Number</dt>
    <dd class="col-sm-10">@Model.RollNumber</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.age</dd>

    <dt class="col-sm-2">Mobile Number</dt>
    <dd class="col-sm-10">@Model.MobileNumber</dd>
</dl>

<form asp-action="Delete" method="post">
    <!-- Hidden field for student ID -->
    <input type="hidden" asp-for="id" />

    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Student" class="btn btn-secondary">Back to List</a>
</form>
